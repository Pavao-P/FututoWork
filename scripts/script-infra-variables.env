# scripts/script-infra-variables.env
# Variáveis de ambiente para scripts de infra
export AZURE_SUBSCRIPTION_ID="<YOUR_SUBSCRIPTION_ID>"
export AZURE_LOCATION="eastus"
export RG_NAME="rg-futurowork"
# ACR name precisa ser único globalmente - pode trocar por acrfuturowork<seunome>
export ACR_NAME="acrfuturowork$(date +%s | cut -c8-14)"
export ACR_SKU="Standard"
export MYSQL_SERVER_NAME="mysql-futurowork-$(date +%s | cut -c8-14)"
export MYSQL_ADMIN_USER="fwadmin"
export MYSQL_ADMIN_PASSWORD="<StrongPassword123!>"
export MYSQL_DB_NAME="futuroworkdb"
export CONTAINERAPPS_ENV_NAME="env-futurowork"
export CONTAINERAPP_BACKEND_NAME="ca-backend-futurowork"
export CONTAINERAPP_FRONTEND_NAME="ca-frontend-futurowork"
export IMAGE_BACKEND_TAG="backend:latest"
export IMAGE_FRONTEND_TAG="frontend:latest"

# Opcional: credenciais do service principal para pipelines (preencher se usar)
export ACR_SERVICE_PRINCIPAL_APPID=""
export ACR_SERVICE_PRINCIPAL_PASSWORD=""